package exercicios;

import java.util.Locale;

public class Ex1 {

	public static void main(String[] args) {
		
		String product1 = "computer";
		String product2 = "office desk";
		
		int age = 20;
		int code = 1022;
		char gender = 'F';

		double price1 = 3000.0;
		double price2 = 600.0;
		double measure = 65.12345678;
		
		System.out.printf("Products: %n%s, wich price is R$ %.2f %n%s, wich price is R$ %.2f", product1, price1, product2, price2);
		
		System.out.println();
		
		System.out.printf("%nRecord: %d years old, code %d and genter: %s", age, code, gender);
		
		System.out.printf("Measue with eigth decimal places: " + measure);
		System.out.printf("Roudes (three decimal places): %.3f ", measure);
		Locale.setDefault(Locale.US);
		System.out.printf("US decimal point: %.3f", measure);
		
	}

}
